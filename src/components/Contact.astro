<section id="kontakt" class="py-20 md:py-28 lg:py-32 bg-dark-950">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="max-w-3xl mb-16 md:mb-20">
      <h2 class="text-3xl md:text-5xl lg:text-6xl font-bold text-white mb-8">Kontakt</h2>
      <p class="text-lg text-steel-400 leading-relaxed">
        Kontakta oss för en kostnadsfri offert. Vi hjälper dig gärna med alla frågor om vattenpolering.
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12">
      <!-- Contact Info -->
      <div class="space-y-6">
        <!-- Address Card -->
        <div class="flex items-start gap-4 bg-dark-900 border border-dark-600 rounded-xl p-6 hover:border-steel-500 transition-all duration-300">
          <div class="w-10 h-10 rounded-full bg-water-700 border border-water-500/30 flex items-center justify-center text-water-400 flex-shrink-0 mt-0.5">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
          </div>
          <div>
            <h3 class="text-silver-100 font-semibold mb-1">Adress</h3>
            <p class="text-steel-400">Rådjursvägen 15</p>
            <p class="text-steel-400">352 45 Växjö</p>
          </div>
        </div>

        <!-- Phone Card -->
        <a href="tel:+46470748690" class="flex items-start gap-4 bg-dark-900 border border-dark-600 rounded-xl p-6 hover:border-water-500/40 transition-all duration-300">
          <div class="w-10 h-10 rounded-full bg-water-700 border border-water-500/30 flex items-center justify-center text-water-400 flex-shrink-0 mt-0.5">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
          </div>
          <div>
            <h3 class="text-silver-100 font-semibold mb-1">Telefon</h3>
            <p class="text-water-400 font-medium">0470-74 86 90</p>
          </div>
        </a>

        <!-- Business Hours Card -->
        <div class="flex items-start gap-4 bg-dark-900 border border-dark-600 rounded-xl p-6 hover:border-steel-500 transition-all duration-300">
          <div class="w-10 h-10 rounded-full bg-water-700 border border-water-500/30 flex items-center justify-center text-water-400 flex-shrink-0 mt-0.5">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
          </div>
          <div>
            <h3 class="text-silver-100 font-semibold mb-1">Öppettider</h3>
            <p class="text-steel-400">Måndag–Fredag: 07:00–16:00</p>
          </div>
        </div>
      </div>

      <!-- Google Maps Embed -->
      <div class="rounded-xl overflow-hidden border border-dark-600 bg-dark-900 min-h-[320px] lg:min-h-full">
        <iframe
          src="https://www.google.com/maps?q=Rådjursvägen+15,+352+45+Växjö,+Sweden&hl=sv&output=embed"
          width="100%"
          height="100%"
          style="border:0; min-height: 320px;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="Växjö Vattenpolering AB på Google Maps"
        ></iframe>
      </div>
    </div>
  </div>
</section>
